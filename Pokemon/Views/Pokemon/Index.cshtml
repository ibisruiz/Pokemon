@using PokePoke.Core.Application.ViewModels.Pokemon; 
@model List<PokemonViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-5 ms-5">

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-controller="Pokemon" asp-action="Create" class="btn btn-outline-success" type="button">Agregar Pokemon</a>
    </div>

    <div class="row ms-5">

        @if (Model.Count == 0 || Model == null)
        {
            <h2>No hay pokemones registrados</h2>
        }
        else
        {
            @foreach (PokemonViewModel item in Model)
            {
                <div class="col-lg-4">

                    <img class="bd-placeholder-img rounded-circle" width="140" height="140" src="@item.ImageUrl" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false" />
                    <h2 class="fw-normal"> @item.Name </h2>
                    <p> Region: regiones</p>
                    <p> Tipo: tipos</p>
                    <div class="btn-group">
                        <a asp-controller="Pokemon" asp-action="" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-controller="Pokemon" asp-action="" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </div>
                </div>
            }
        }

    </div>

</div>